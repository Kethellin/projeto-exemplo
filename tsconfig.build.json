{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./public",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
